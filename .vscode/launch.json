    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to SAM CLI",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "port": 5858,
            // From the sam init example, it would be "${workspaceRoot}/hello-world"
            "localRoot": "${workspaceRoot}/{directory of node app}",
            "remoteRoot": "/var/task",
            "protocol": "inspector",
            "stopOnEntry": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "get-restaurants",
            "program": "${workspaceFolder}/node_modules/.bin/sls",
            "args": [
                "invoke",
                "local",
                "-f",
                "get-restaurants",
                "-d",
                "{}"
            ],
            "env": {
                "estaurants_table": "restaurants"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "search-restaurants",
            "program": "${workspaceFolder}/node_modules/.bin/sls",
            "args": [
                "invoke",
                "local",
                "-f",
                "search-restaurants",
                "-p",
                "examples/search-restaurants.json"
            ],
            "env": {
                "estaurants_table": "restaurants"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "get-index",
            "program": "${workspaceFolder}/node_modules/.bin/sls",
            "args": [
                "invoke",
                "local",
                "-f",
                "get-index",
                "-d",
                "{}"
            ],
            "env": {
                "restaurants_api": "https://27phnukza0.execute-api.us-east-1.amazonaws.com/dev/restaurants",
                "cognito_user_pool_id": "us-east-1_DufZfQABc",
                "cognito_client_id": "349lgu0a8vhk84pvm0mflngg35"
            }
        }
    ]
}